@model WebKermesse.Models.EventViewModel

<div class="row center">
    <div class="card mb-3 cardShadow margin" style="width: auto; ">
        <div class="card-body">
            <h3 class="card-title">@ViewBag.Libelle</h3>
        </div>
        <img class="card-img-top" src="@ViewBag.Image" alt="Card image cap" style="max-width:650px;height:auto;  display:block; margin-left:auto; margin-right:auto;">
        <div class="card-body">
            <hr />
            <dl class="dl-horizontal">

                <dt>
                    Description
                </dt>

                <dd>
                    @ViewBag.Description
                </dd>

                <dt>
                    Date de début
                </dt>

                <dd>
                    @ViewBag.StartDate
                </dd>

                <dt>
                    Date de fin
                </dt>

                <dd>
                    @ViewBag.EndDate
                </dd>

                <dt>
                    Thème
                </dt>

                <dd>
                    @ViewBag.Theme
                </dd>

                <dt>
                    Rue
                </dt>

                <dd>
                    @ViewBag.StreetAddress
                </dd>

                <dt>
                    Code Postal
                </dt>

                <dd>
                    @ViewBag.PostalCode
                </dd>

                <dt>
                    Ville
                </dt>

                <dd>
                    @ViewBag.City
                </dd>
            </dl>
            <hr />
        </div>
    </div>

</div>
<p>
    
    @Html.ActionLink("Back to List", "Index")
</p>
