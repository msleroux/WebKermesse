@{
    ViewBag.Title = "Home Page";

}
@model WebKermesse.Models.EventViewModel


<div class="jumbotron rennes text-center" id="jumbo_img_rennes">
    <h1>Bienvenue sur Kermesse </h1>
    <br />
    <br />
    <div class="border-radius bg-danger padding cardShadow block col-md-offset-1 col-md-10">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="form-inline text-center">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.Libelle, new { htmlAttributes = new { @class = "form-control border25;", @placeholder = "Chercher votre événement" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        @Html.DropDownListFor(model => model.ThemeId, Model.ListThemes, "Sélectionnez un thème", new { @class = "form-control", id = "themes" })

                    </div>
                </div>
                 <div class="form-group">
                        <div class=" col-md-5">
                            <input type="submit" value="Go !" class="btn btn-info glyphicon-send" />
                        </div>
                    </div>
               
            </div>
        }

    </div>
</div>
<hr />
<div class="container">
    <h2>Evénements à venir sur Rennes</h2>
    <div class="row center">
        <div class=" col-md-4 center card mb-3 cardShadow margin" style="width: 18rem;">
            <img class="card-img-top resize-mini center" src="~/Content/images/bkg-blu.jpg" alt="Card image cap">                <div class="card-body">
                <div class="card-body center">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-info margin">voir plus</a>
                </div>
            </div>
        </div>
     </div>
</div>
