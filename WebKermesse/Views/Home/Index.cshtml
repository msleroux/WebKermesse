@{
    ViewBag.Title = "Home Page";

}
@model WebKermesse.Models.EventViewModel



<div class="jumbotron rennes text-center" id="jumbo_img_rennes">
    <h1>Bienvenue sur Kermesse </h1>
    <br />
    <br />
    <div class="border-radius bg-danger padding cardShadow block col-md-offset-1 col-md-10">

        @using (Html.BeginForm("FormAccueil", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-inline text-center">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.Libelle, new { htmlAttributes = new { @class = "form-control border25;", @placeholder = "Chercher votre événement" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        @Html.DropDownListFor(model => model.ThemeId, Model.ListThemes, "Sélectionnez un thème", new { @class = "form-control", id = "themes" })
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-md-5">
                        <input type="submit" value="Dis moi où se garer !" class="btn btn-info glyphicon-send" />
                    </div>
                </div>

            </div>
        }

    </div>
</div>
<hr />

@if (Model.ListEventResult != null)
{
    <div class="container-fluid center">
        <h2>Résultat de la recherche</h2>
        <div class="row center col-lg-10 col-md-8">
            @foreach (var e in Model.ListEventResult)
            {
                <div class=" col-md-4 center padding-0 card mb-3 cardShadow margin" style="width: 18rem;">
                    <img class="card-img-top resize-mini" src="~/Content/images/photoRennes.jpg" alt="image de l'événement @e.Libelle">
                    <div class="card-body center margin">
                        <div class="card-body center">
                            <h5 class="card-title">@e.Libelle - @e.Theme</h5>
                            <a href="/Map" class="btn btn-info">Où se garer ?</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <hr />
}
else
{
    <div class="container-fluid center">
        <h2>Evénements à venir sur Rennes</h2>
        <div class="row center col-lg-10 col-md-8">
            @foreach (var e in Model.ListEventAVenir)
            {
                <div class=" col-md-4 center padding-0 card mb-3 cardShadow margin" style="width: 18rem;">
                    <img class="card-img-top resize-mini" src="~/Content/images/photoRennes.jpg" alt="image de l'événement @e.Libelle">
                    <div class="card-body center margin">
                        <div class="card-body center">
                            <h5 class="card-title">@e.Libelle</h5>
                            <a href="/Map" class="btn btn-info">Où se garer ?</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}



